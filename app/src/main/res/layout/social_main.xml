<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/social_circus"
    android:orientation="vertical">
    <!--   android:background="@color/colorPrimaryDark" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/follow_us"
        android:textAlignment="center"
        android:textColor="@color/colorSignIn"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <View
            android:layout_width="152dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorSignIn">

        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewfb"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/imageViewInst"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:src="@drawable/instagram_icon2" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_mail"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:src="@drawable/gmail_icon" />

</LinearLayout>


